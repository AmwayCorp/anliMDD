#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_node-sass-chokidar@0.0.3@node-sass-chokidar/bin/node-sass-chokidar" "$@"
  ret=$?
else 
  node  "$basedir/../_node-sass-chokidar@0.0.3@node-sass-chokidar/bin/node-sass-chokidar" "$@"
  ret=$?
fi
exit $ret
